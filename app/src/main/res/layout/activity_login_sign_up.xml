<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUpActivity"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/header_loginSingUpPage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:src="@drawable/login_signup_person_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shapePanelLeft"
        android:layout_width="260dp"
        android:layout_height="530dp"
        android:background="@drawable/shape_panel_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_loginSingUpPage" >

        <TextView

            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:text="L O G I N"
            android:layout_width="150dp"
            android:layout_height="60dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/signupTextID"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/shapePanelLeft"
        app:layout_constraintTop_toBottomOf="@id/header_loginSingUpPage" />

    <LinearLayout
        android:id="@+id/LoginPanel"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/shape_login_panel"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingTop="170dp"
        android:paddingLeft="80dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_loginSingUpPage"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:layout_width="298dp"
            android:layout_height="45dp"
            android:id="@+id/loginemailId"
            android:layout_gravity="left"
            android:hint="Email"
            android:drawableRight="@drawable/login_signup_email_icon"
            android:inputType="textEmailAddress"></EditText>

        <EditText android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/loginpassId"
            android:drawableRight="@drawable/login_signup_password_icon"
            android:layout_gravity="left"
            android:layout_width="298dp"
            android:layout_height="45dp" ></EditText>
        <Button
            android:id="@+id/loginButtonID"
            android:text="LOGIN"
            android:textSize="20sp"
            android:layout_width="298dp"
            android:layout_gravity="left"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/helpMeLoginTextID"
            android:onClick="clickTextView"
            android:layout_marginTop="90dp"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:textColor="@color/primaryColor_blue"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Help me login!"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>