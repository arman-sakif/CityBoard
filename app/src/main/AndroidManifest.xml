<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cityboard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CityBoard">
        <activity android:name=".DescActivity"></activity>
        <activity android:name=".CreatePostActivity" />
        <activity android:name=".SetupProfileActivity" />
        <activity android:name=".chats.MessagingActivity" />
        <activity android:name=".chats.ChatActivity" />
        <activity android:name=".Search.SearchActivity" />
        <activity android:name=".Services.ServicesActivity" />
        <activity android:name=".Items.ItemsActivity" />
        <activity android:name=".Teaching.TeachingActivity" />
        <activity android:name=".Resident.ResidentActivity" />
        <activity android:name=".HomePageActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginSignUpActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SplashScreenActivity" />
        <activity android:name=".OnBoardScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>